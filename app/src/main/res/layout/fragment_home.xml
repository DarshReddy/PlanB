    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:shadowColor="@android:color/darker_gray"
        android:text="@string/how_much_can_you_spend_today_for_food"
        android:textAlignment="center"
        android:textColor="@color/places_ui_default_primary_dark"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/budget_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="number"
        android:textSize="@dimen/text_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:autofillHints="500" />

    <Button
        android:id="@+id/btn_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawableEnd="@drawable/ic_arrow"
        android:text="@string/plan"
        android:textSize="@dimen/text_10"
        app:layout_constraintEnd_toEndOf="@+id/budget_edit"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/budget_edit"
        app:layout_constraintTop_toBottomOf="@+id/budget_edit" />

